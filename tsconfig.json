{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "types": ["node", "playwright"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
